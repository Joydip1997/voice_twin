  <!-- Generate Audio UI -->
  <div id="generate-audio-ui" class="content">
    <h1>Generate Voice</h1>
    <form id="voiceForm">
      <textarea id="paragraph" name="paragraph" rows="4" maxlength="1000" required></textarea>
      <label id="text_counter" for="paragraph">Characters remaining: 1000</label>

      <select id="voices" name="voices" required>

      </select>
      <input type="submit" id="submitButton" value="Submit" disabled>
      <div id="audioContainer" style="margin-top: 20px;"></div>
    </form>
  </div>
  <!-- Purchase Coins -->
  <div id="purchase-coins" class="content">
    <h1 id="test-id">Pricing</h1>
    <p class="green-text">$0.00056</p>
    <p class="extra-small-text">Coins (1 token = 1 character)</p>

    <datalist id="tickmarks">
      <option value="0" label="100"></option>
      <option value="100" label="1000"></option>
    </datalist>
    <input type="range" class="slider" min="100" max="1000" step="10" value="100" />

    <div>
      <button id="coin-to-purchase" class="custom-button">Buy 1K Tokens $0.00056</button>
    </div>

  </div>

  <!-- Create Audio Clone Section -->

  <div id="create_audio_clone_ui" class="create_audio_clone">
    <h2 id="file_upload_title">Upload The Voice</h2>
    <div class="form-group">
      <label for="name">Voice Name:</label>
      <input type="text" placeholder="" class="input-field" />
    </div>
    <div class="form-group">
      <label for="files">Select Files:</label>
      <input type="file" id="files" accept=".mp3" multiple>
      <label for="files" class="file-label">Choose Files</label>
    </div>
    <div class="file-list">
      <p>Selected Files:</p>
    </div>
    <button id="submitBtn" class="submit-btn">Upload</button>
    <div id="disclaimer">
      <p>This website respects intellectual property rights. Do not use other individuals' voices without their explicit
        permission. Always seek proper authorization before utilizing any copyrighted material.</p>
    </div>

  </div>






